{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["store.ts"],
  "include": ["./src/**/*"]
}
